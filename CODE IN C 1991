#include <SDL2/SDL.h>
#include <stdbool.h>

#define WINDOW_WIDTH 800
#define WINDOW_HEIGHT 600
#define PLAYER_SPEED 5
#define BULLET_SPEED 10

typedef struct {
    int x, y;
    bool active;
} Bullet;

int main(int argc, char *argv[]) {
    SDL_Init(SDL_INIT_VIDEO);

    SDL_Window *window = SDL_CreateWindow("Mini Afterburner", SDL_WINDOWPOS_CENTERED, SDL_WINDOWPOS_CENTERED, WINDOW_WIDTH, WINDOW_HEIGHT, 0);
    SDL_Renderer *renderer = SDL_CreateRenderer(window, -1, SDL_RENDERER_ACCELERATED);

    SDL_Rect player = {100, WINDOW_HEIGHT/2, 50, 30};
    Bullet bullet = {0, 0, false};

    bool running = true;
    SDL_Event event;

    int backgroundX = 0;

    while (running) {
        while (SDL_PollEvent(&event)) {
            if (event.type == SDL_QUIT) running = false;
        }
        const Uint8 *state = SDL_GetKeyboardState(NULL);
        if (state[SDL_SCANCODE_UP]) player.y -= PLAYER_SPEED;
        if (state[SDL_SCANCODE_DOWN]) player.y += PLAYER_SPEED;
        if (state[SDL_SCANCODE_RIGHT]) player.x += PLAYER_SPEED;
        if (state[SDL_SCANCODE_LEFT]) player.x -= PLAYER_SPEED;

        // Limiter la position du joueur à l'écran
        if (player.y < 0) player.y = 0;
        if (player.y > WINDOW_HEIGHT - player.h) player.y = WINDOW_HEIGHT - player.h;
        if (player.x < 0) player.x = 0;
        if (player.x > WINDOW_WIDTH - player.w) player.x = WINDOW_WIDTH - player.w;

        // Tirer une balle avec espace
        if (state[SDL_SCANCODE_SPACE] && !bullet.active) {
            bullet.x = player.x + player.w;
            bullet.y = player.y + player.h / 2;
            bullet.active = true;
        }

        // Mise à jour de la balle
        if (bullet.active) {
            bullet.x += BULLET_SPEED;
            if (bullet.x > WINDOW_WIDTH) bullet.active = false;
        }

        // Scrolling background simple (juste un rectangle qui se déplace)
        backgroundX -= 2;
        if (backgroundX <= -WINDOW_WIDTH) backgroundX = 0;

        // Rendu
        SDL_SetRenderDrawColor(renderer, 0, 0, 50, 255);
        SDL_RenderClear(renderer);

        // Fond simple : deux rectangles pour le scrolling
        SDL_Rect bg1 = {backgroundX, 0, WINDOW_WIDTH, WINDOW_HEIGHT};
        SDL_Rect bg2 = {backgroundX + WINDOW_WIDTH, 0, WINDOW_WIDTH, WINDOW_HEIGHT};
        SDL_SetRenderDrawColor(renderer, 20, 20, 80, 255);
        SDL_RenderFillRect(renderer, &bg1);
        SDL_RenderFillRect(renderer, &bg2);

        // Joueur
        SDL_SetRenderDrawColor(renderer, 255, 0, 0, 255);
        SDL_RenderFillRect(renderer, &player);

        // Balle
        if (bullet.active) {
            SDL_Rect b = {bullet.x, bullet.y, 10, 4};
            SDL_SetRenderDrawColor(renderer, 255, 255, 0, 255);
            SDL_RenderFillRect(renderer, &b);
        }

        SDL_RenderPresent(renderer);
        SDL_Delay(16);  // ~60fps
    }

    SDL_DestroyRenderer(renderer);
    SDL_DestroyWindow(window);
    SDL_Quit();

    return 0;
}
